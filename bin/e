#!/bin/sh
#
# USAGE:
#
#   $ e
#   # => opens the current directory in your editor
#
#   $ e .
#   $ e /usr/local
#   # => opens the specified directory in your editor

# This command generally means we don't want to wait
test "$EDITOR" = "subl -w" && EDITOR="subl"
test "$EDITOR" = "mvim -f" && EDITOR="mvim"

if test "$1" == ""
then
  exec $EDITOR .
else
  exec $EDITOR "$1"
fi
